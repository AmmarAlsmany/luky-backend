# ==================================================
# LUKY BACKEND - PRODUCTION ENVIRONMENT
# ==================================================
# Copy this file to .env on your production server
# and update all values accordingly
# ==================================================

# Application Settings
APP_NAME=Luky
APP_ENV=production
APP_KEY=base64:YOUR_PRODUCTION_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-domain.com

# IMPORTANT: Set APP_DEBUG=false in production!
# IMPORTANT: Generate new APP_KEY with: php artisan key:generate

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=your-domain.com,www.your-domain.com

# Locale Settings
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file

# Security Settings
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_CHANNEL=daily
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning
LOG_DAILY_DAYS=14

# Database Configuration (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=luky_production
DB_USERNAME=luky_user
DB_PASSWORD=STRONG_DATABASE_PASSWORD_HERE

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.your-domain.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# Broadcasting (Use Redis or Pusher in production)
BROADCAST_CONNECTION=pusher

# Filesystem (Consider using S3 for production)
FILESYSTEM_DISK=public

# Queue Configuration (Use Redis for better performance)
QUEUE_CONNECTION=redis

# Cache Configuration (Redis recommended for production)
CACHE_STORE=redis
CACHE_PREFIX=luky_cache

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# SMS Configuration
SMS_APP_ID=YOUR_PRODUCTION_SMS_APP_ID
SMS_APP_SECRET=YOUR_PRODUCTION_SMS_APP_SECRET
SMS_SENDER=Luky
SMS_API_URL=https://api.sms-provider.com/send

# Email Configuration (SMTP for production)
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-email-provider.com
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=YOUR_EMAIL_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# MyFatoorah Payment Gateway (PRODUCTION)
# IMPORTANT: Use LIVE API key and URL for production!
# Webhook-only configuration - no browser callbacks needed
MYFATOORAH_API_KEY=YOUR_LIVE_MYFATOORAH_API_KEY
MYFATOORAH_API_URL=https://api.myfatoorah.com
MYFATOORAH_WEBHOOK_SECRET=qOYfW8WH4+3BkmJ9Cf/2H4Rlg7hj+GKcsKskCTmRkTJ+ngG4VZqlBPjtloZHaKGP9Llv9WA3yFRCltkhIJxm3g==
PAYMENT_TIMEOUT_MINUTES=5

# AWS S3 (Optional - for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher Configuration (for real-time features)
PUSHER_APP_ID=YOUR_PUSHER_APP_ID
PUSHER_APP_KEY=YOUR_PUSHER_APP_KEY
PUSHER_APP_SECRET=YOUR_PUSHER_APP_SECRET
PUSHER_APP_CLUSTER=YOUR_PUSHER_CLUSTER
PUSHER_SCHEME=https

# FCM Configuration (Firebase Cloud Messaging)
FCM_SERVER_KEY=YOUR_PRODUCTION_FCM_SERVER_KEY
# Use relative path from project root (e.g., storage/app/firebase/your-firebase-adminsdk.json)
FCM_CREDENTIALS_PATH=storage/app/firebase/luky-firebase-adminsdk.json

# Vite
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ==================================================
# SECURITY NOTES:
# ==================================================
# 1. Never commit this file to version control
# 2. Use strong passwords for database and services
# 3. Enable HTTPS on your domain (use Let's Encrypt)
# 4. Set proper file permissions: chmod 600 .env
# 5. Keep APP_DEBUG=false in production
# 6. Regularly rotate API keys and secrets
# 7. Use environment-specific credentials
